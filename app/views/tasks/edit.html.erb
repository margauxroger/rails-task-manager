<div id="container">
  <%= form_for(@task) do |f|%>
  <div class="form-group">
    <%= f.label :title, class: 'mt-4' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details, class: 'mt-2' %>
    <%= f.text_area :details, size: "60x12", class: 'form-control' %>
  </div>
  <div class="form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, class: "form-check-label" %>
  </div>
  <%= f.submit "Update task!", class: 'btn btn-primary mt-3' %>
<% end %>
</div>

